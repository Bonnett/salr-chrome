{
  "name": "Something Awful Last Read", 
  "version": "0.4.7",
  "description": "Highlights posts which quote the user", 
  "icons": {
	  		  "16": "images/logo16.png",
			  "32": "images/logo32.png",
			  "48": "images/logo48.png",
			  "128": "images/logo128.png"
		   },
  "background_page": "salr-chrome.html",
  "options_page":"settings.html",
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/page-navigator.js",
        "js/salr.js",
		"js/colorpicker.js"
      ],
      "matches": [
        "http://forums.somethingawful.com/*"
      ]
    }
  ], 
  "permissions": [
        "tabs"
  ],
  "page_actions": [
    {
        "id": "forums_jump_list",
        "name": "Forum Jump List",
        "popup": "popup.html",
        "icons": ["images/logo16.png"]
    }
  ],
  "update_url": "http://scottferg.github.com/salr-chrome/update/update_manifest.xml"
}
