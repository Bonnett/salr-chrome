{
  "name": "Something Awful Last Read", 
  "version": "0.6.4",
  "description": "Highlights posts which quote the user", 
  "icons": {
	  		  "16": "images/logo16.png",
			  "32": "images/logo32.png",
			  "48": "images/logo48.png",
			  "128": "images/logo128.png"
		   },
  "background_page": "salr-chrome.html",
  "options_page":"settings.html",
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/jquery-ui.js",
        "js/jquery.transform.min.js",
        "js/quick-reply.js",
        "js/page-navigator.js",
        "js/salr.js",
		"js/colorpicker.js"
      ],
      "css" : [
        "css/jquery-ui/jquery-ui.custom.css",
        "css/quick-reply.css"
      ],
      "matches": [
        "http://forums.somethingawful.com/*"
      ],
      "run_at": "document_end"
    }
  ], 
  "permissions": [
        "tabs"
  ],
  "page_actions": [
    {
        "id": "forums_jump_list",
        "name": "Forum Jump List",
        "popup": "popup.html",
        "icons": ["images/logo16.png"]
    }
  ]
}
